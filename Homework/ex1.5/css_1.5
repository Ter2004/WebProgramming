.box{
  width: 50px;
  height: 50px;
  color: white;
  text-align: center;
}
#box1{
  border: 1px solid; 
  background-color: red;
  position: absolute;
  top: 0;
  left: 0;
  text-align: 50px;
}

#box2{
  border: 1px solid;
  background-color: blue;
  position: absolute;
  top: 0;
  right: 0;
  text-align: 50px;
}
#box3{
  border: 1px solid;
  background-color: yellow;
  position: absolute;
  bottom: 0;
  left: 0;
  text-align: 50px;
}
#box4{
  border: 1px solid;
  background-color: green;
  position: absolute;
  bottom: 0;
  right: 0;
  text-align: 50px;
}
